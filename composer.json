{
    "name": "amphp/cluster",
    "homepage": "https://github.com/amphp/cluster",
    "description": "Cluster",
    "keywords": [
        "cluster",
        "multi-process",
        "parallel",
        "async",
        "non-blocking",
        "amp",
        "amphp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Bob Weinand"
        }
    ],
    "require": {
        "php": ">=7.1",
        "amphp/amp": "^2",
        "amphp/byte-stream": "^1.5",
        "amphp/log": "^1.1",
        "amphp/parallel": "^1.2",
        "amphp/socket": "^1",
        "league/climate": "^3",
        "monolog/monolog": "^2 || ^1.23",
        "psr/log": "^1"
    },
    "require-dev": {
        "amphp/file": "^1 || ^0.3",
        "amphp/http-server": "^2-RC",
        "amphp/phpunit-util": "^1.1",
        "amphp/php-cs-fixer-config": "dev-master",
        "phpunit/phpunit": "^8 || ^7",
        "infection/infection": "^0.7.1"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Cluster\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Cluster\\Test\\": "test"
        }
    },
    "suggest": {
        "ext-sockets": "Required for socket transfer on systems that do not support SO_REUSEPORT",
        "amphp/file": "Required for logging to a file"
    },
    "conflict": {
        "amphp/file": "<0.2 || >=2"
    },
    "bin": [
        "bin/cluster"
    ],
    "scripts": {
        "test": "@php -dzend.assertions=1 -dassert.exception=1 ./vendor/bin/phpunit",
        "code-style": "@php ./vendor/bin/php-cs-fixer fix"
    }
}
